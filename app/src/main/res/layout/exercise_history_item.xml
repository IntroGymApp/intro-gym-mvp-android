<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        style="@style/DefaultCardStyle"
        app:cardCornerRadius="5dp"
        android:backgroundTint="?attr/ig_cardBackgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvExerciseHistoryCount"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="#1"
                android:textAppearance="@style/TextMediumSemiboldStyle"
                android:background="?attr/ig_cardBackgroundColor"
                android:textColor="?attr/ig_primaryLightColor"/>

            <TextView
                android:id="@+id/tvExersiceHistoryInfo"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:gravity="center_vertical"
                android:text="Повторений: 5 x 60кг"
                android:textAppearance="@style/TextMediumRegularStyle"
                android:textColor="?attr/ig_primaryLightColor"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>